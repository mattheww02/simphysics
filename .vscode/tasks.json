    "version": "2.0.0",
    "tasks": [
        {
            "label": "build OpenGL Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",                                     // Your source file
                "-o", "main",                                   // Output binary
                "-I", "C:/Users/mattw/OneDrive/Documents/vcpkg/installed/x64-windows/include",      // Include for dynamic libraries
                "-I", "C:/Users/mattw/OneDrive/Documents/vcpkg/installed/x64-windows-static/include", // Include for static libraries
